<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="width: 100%;">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <div style="display: flex; margin-left: auto; align-items: center;">
          <% if (locals.email) { %>
            <div style="display: flex;">
              <div style="display: flex; align-items: center;">
                <p style="margin-bottom: 0px;">User: <%= email %>
                </p>
              </div>
              <div style="padding: 0 10px;">
                <form method="post" action="/logout" style="margin-block-end: 0;">
                  <button type="submit" class="btn btn-outline-secondary">Logout</button>
                </form>
              </div>
            </div>
          <% } else { %>
            <div style="display: flex; padding: 0 10px;">
              <form action="/login" style="padding: 0 0.5rem; margin-block-end: 0;">
                <button type="submit" class="btn btn-primary">Login</button>
              </form>
              <form action="/register" style="padding: 0 0.5rem; margin-block-end: 0;">
                <button type="submit" class="btn btn-secondary">Register</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>