<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style="width: 100%;">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <div style="margin-left: auto; margin-right: 0px;">
          <% if (locals.username) { %>
            <div style="display: flex;">
              <div style="padding: 0 10px; height: 40px;">
                <p style="line-height: 40px;">User: <%= username %>
                </p>
              </div>
              <div style="padding: 0 10px; height: 40px;">
                <form method="post" action="/logout">
                  <button type="submit" class="btn btn-outline-secondary">Logout</button>
                </form>
              </div>
            </div>
            <% } else { %>
              <div style="padding: 0 10px; height: 40px;">
                <form method="post" action="/login">
                  <div class="input-group mb-3">
                    <input type="text" name="username" placeholder="username" class="form-control">
                    <div class="input-group-append">
                      <button type="submit" class="form-control">Sign In</button>
                    </div>
                  </div>
                </form>
              </div>
            <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>